//- Template for home page view

extends ../layouts/base
 
block intro
    h1 Welcome

block content
    .container-fluid
        if user
            #event.row: .col-md-3: .dropdown
                button#dropdownMenu1.btn.btn-default.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true") View Event 
                    span.caret
                ul.dropdown-menu(aria-labelledby="dropdownMenu1")
                    each event in events
                        li: a(href="/event/#{event.id}") #{event.name}
            if user.isAdmin || user.isOrganiser
                #createEvent.row: .col-md-3: a.btn.btn-default(role="button" href="/createEvent") Create Event
        else
            #login.row: .col-md-3: a(href="/keystone/signin") Sign In